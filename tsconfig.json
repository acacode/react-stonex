{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "forceConsistentCasingInFileNames": true,
      "lib": [
        "es6",
        "es2017",
        "dom"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "outDir": "dist",
      "rootDir": "lib",
      "sourceMap": true,
      "strictNullChecks": true,
      "jsx": "react",
      "suppressImplicitAnyIndexErrors": true,
      "target": "es5",
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": [
      "lib/**/*.ts"
    ],
    "exclude": [
      "dist",
      "node_modules"
    ]
}